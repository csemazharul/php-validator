{
    "name": "mazed/php-validator",
    "description": "PHP Validation Library",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "keywords": ["validation","form-validation", "input-validation","input-sanitization", "PHP-validation"],
    "support": {
      "issues": "https://github.com/csemazharul/php-validator/issues",
      "source": "https://github.com/csemazharul/php-validator"
    },
    "authors": [
        {
          "email": "csemazharulislam@gmail.com",
          "name": "Mazharul Islam"
        }
      ],
    "autoload": {
        "psr-4": {
            "Mazed\\PHPValidator\\": "src/"
        }
    },
    "scripts":{
        "validator:test":"./vendor/bin/pest",
        "compact": "./vendor/bin/phpcs  -p ./src --standard=PHPCompatibility --runtime-set testVersion 5.6",
        "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/phpcompatibility/php-compatibility",
        "post-update-cmd" : "\"vendor/bin/phpcs\" --config-set installed_paths vendor/phpcompatibility/php-compatibility"
    },
    "require": {
        "php": ">=5.6"
      },
    "require-dev": {
        "squizlabs/php_codesniffer":"*",
        "phpcompatibility/php-compatibility": "*",
        "pestphp/pest": "^2.20"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
